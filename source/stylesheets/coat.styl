// base.styl
// VRO Web

@import base

// ----------------------------------------------


.bold
	font-weight bold
	
[data-page="main"]
	.main-content
		background $red
		height 110px
		border-radius 10px
		
	$bottomButtonSpacing = 3px
	.faq, .log-out
		text-align center
		position fixed
		bottom 0px
		background $red
		width ($std_page_width / 2 - $bottomButtonSpacing / 2)
		height 20px
		padding 20px 0px
		$top = 10px
		border-top-left-radius $top
		border-top-right-radius $top
		-webkit-transition 0.2s
		transition 0.2s
		a
			-webkit-transition 0.2s
			transition 0.2s
		
		&:hover
			background $darkred
			height 25px
			cursor pointer
			a
				font-size 120%
		
	.faq
		margin-left ($std_page_width / 2 + $bottomButtonSpacing / 2)
		
			
	.catch
		text-align center
		position relative
		top 50px
		background $red
		width calc((98.7%) / 2)
		height 150px
		bg-image happy
		border-radius 10px
		-webkit-transition 0.2s
		transition 0.2s
		&:hover
			background $darkred
			bg-image happy
			background-size 160px 160px
			cursor pointer
			
		
    	
		
		
	.die
		text-align center
		position relative
		top 50px
		background $red
		width calc((98.8%) / 2)
		height 150px	
		bg-image dead
		border-radius 10px
		-webkit-transition 0.2s
		transition 0.2s
		&:hover
			background $darkred
			bg-image dead
			background-size: 160px 160px;
			cursor pointer
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		background $red
		
		
		
		

h1
	font-title()
	text-decoration underline
	
h2
	font-regular()
	
[data-page="faq"]
	.main-content
		border-radius 10px
		padding 30px
		
	.bold
		color white	
				
	$bottomButtonSpacing = 3px
	.main, .log-out
