// base.styl
// VRO Web

@import base

// ----------------------------------------------


.bold
	font-weight bold
	
[data-page="main"]
	.main-content
		background $red
		padding 0px
		height 110px
		width 400px
		-webkit-border-radius 10px 10px 10px 10px
		-moz-border-radius 10px 10px 10px 10px
		border-radius 10px 10px 10px 10px
		
		
		
	.faq
		text-align center
		position fixed
		bottom 0px
		background $red
		width calc((78.8%) / 2)
		height 20px	
		padding 20px
		-webkit-border-radius 10px 10px 10px 10px
		-moz-border-radius 10px 10px 10px 10px
		border-radius 10px 10px 10px 10px
		
	.faq:hover
		background $darkred
		height 25px
		a
			font-size 120%
		

	
	.log-out
		text-align center
		position fixed
		bottom 0px
		width calc((78.9%) / 2)
		background $red
		height 20px
		padding 20px
		-webkit-border-radius 10px 10px 10px 10px
		-moz-border-radius 10px 10px 10px 10px
		border-radius 10px 10px 10px 10px
		
		
	.log-out:hover
		background $darkred
		height 25px
		a
			font-size 120%
			
	.catch
		text-align center
		position relative
		top 50px
		background $red
		width calc((78.9%) / 2)
		height 150px
		bg-image happy
		-webkit-border-radius 10px 10px 0px 0px
		-moz-border-radius 10px 10px 0px 0px
		border-radius 10px 10px 0px 0px
		
    	
		
		
	.die
		text-align center
		position relative
		top 50px
		background $red
		width calc((78.9%) / 2)
		height 150px	
		bg-image dead
		-webkit-border-radius 10px 10px 0px 0px
		-moz-border-radius 10px 10px 0px 0px
		border-radius 10px 10px 0px 0px
	
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		background $red
		
		
		
		

h1
	font-title()
	color white
	text-decoration underline
	

	
	

