// base.styl
// VRO Web

@import base

// ----------------------------------------------


.bold
	font-weight bold
	
[data-page="main"]
	.main-content
		background white
		border-radius 10px
		height 545px
		border-style solid
		border-width 1px
		border-color $darkgrey
		
	$bottomButtonSpacing = 5px
	.faq, .log-out
		text-align center
		position fixed
		bottom 0px
		background white
		width ($std_page_width / 2 - $bottomButtonSpacing / 2)
		height 20px
		padding 20px 0px
		$top = 10px
		border-top-left-radius $top
		border-top-right-radius $top
		transition 0.2s
		border-style solid
		border-width 1px
		border-color $darkgrey
		margin-left -10px
		a
			-webkit-transition 0.2s
			transition 0.2s
		
		&:hover
			background $blue
			box-shadow: 0px 0px 20px -2px rgba(153,153,153,1);
			height 25px
			cursor pointer
			color white
			a
				font-size 120%
		
	.faq
		margin-left ($std_page_width / 2 - $bottomButtonSpacing / 2)
		
		&:hover
			background $green
		
			
	.catch
		text-align center
		position relative
		top -265px
		background white
		width 250px
		height 250px
		bg-image happy
		margin-left ($std_page_width / 2)
		border-radius 100px
		-webkit-transition 0.2s
		transition 0.2s
		border-style solid
		border-color white
		border-width 20px

		
		&:hover
			bg-image darkhappy
			background-size 270px
			cursor pointer
			
		
		
		
		
	.die
		text-align center
		position relative
		top 30px
		background white
		width 250px
		height 250px	
		bg-image dead
		border-radius 100px
		transition all 0.2s
		margin-right ($std_page_width / 2)
		border-style solid
		border-color white
		border-width 20px
		&:hover
			bg-image darkdead
			background-size 270px
			cursor pointer
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		
	.ca, .di
		text-align center
		position relative
		top -300px
		font-size 90%
		padding 0px 70px
		
		
		
		
		

h1
	font-title()
	text-decoration underline
	
h2
	font-regular()
	
.bar
	$paddingwidth = 100%
	background white
	text-align center
	position fixed
	color $darkergrey
	top 0px
	height 40px
	padding 0px $paddingwidth
	width $std_page_width
	border-style solid
	border-width 0px 0px 1px 0px
	border-color $darkgrey
	margin-left ($paddingwidth / -1)
	
	.fragor, .home, .bye
		font-size 90%
		position relative
		top -1px
	
	.bye
		color $darkergrey
		top 3px
		width 180px
		
		
		&:hover
			border-style solid
			border-width 0px 0px 3px 0px
			border-color $blue
			cursor pointer
			
	.home
		margin-left 0px
