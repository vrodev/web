// base.styl
// VRO Web

@import base

// ----------------------------------------------


.bold
	font-weight bold
	
[data-page="main"]
	.main-content
		background $grey
		border-radius 10px
		height 345px
		border-style solid
		border-width 1px
		border-color $darkgrey
		
	$bottomButtonSpacing = 5px
	.faq, .log-out
		text-align center
		position fixed
		bottom 0px
		background $grey
		width ($std_page_width / 2 - $bottomButtonSpacing / 2)
		height 20px
		padding 20px 0px
		$top = 10px
		border-top-left-radius $top
		border-top-right-radius $top
		transition 0.2s
		border-style solid
		border-width 1px
		border-color $darkgrey
		margin-left -10px
		a
			-webkit-transition 0.2s
			transition 0.2s
		
		&:hover
			background $blue
			box-shadow: 0px 0px 20px -2px rgba(153,153,153,1);
			height 25px
			cursor pointer
			color white
			a
				font-size 120%
		
	.faq
		margin-left ($std_page_width / 2 - $bottomButtonSpacing / 2)
		
		&:hover
			background $green
		
			
	.catch
		text-align center
		position relative
		top 30px
		background $grey
		width 150px
		height 150px
		bg-image happy
		border-radius 100px
		-webkit-transition 0.2s
		transition 0.2s
		border-style solid
		border-color $grey
		border-width 20px

		
		&:hover
			bg-image darkhappy
			background-size 160px
			cursor pointer
			
		
    	
		
		
	.die
		text-align center
		position relative
		top 30px
		background $grey
		width 150px
		height 150px	
		bg-image dead
		border-radius 100px
		transition all 0.2s
		border-style solid
		border-color $grey
		border-width 20px
		&:hover
			bg-image darkdead
			background-size 160px
			cursor pointer
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		
	.ca, .di
		text-align center
		position relative
		top 0px
		font-size 90%
		padding 0px 50px
		
		
		
		
		

h1
	font-title()
	text-decoration underline
	
h2
	font-regular()
	
[data-page="faq"]
	.main-content
		border-radius 10px
		padding 30px
		border-style solid
		border-width 1px
		border-color $darkgrey

		


	.bold
		color $green
				
	$bottomButtonSpacing = 5px
	.main, .log-out
		text-align center
		position fixed
		bottom 0px
		background $grey
		color $green
		width ($std_page_width / 2 - $bottomButtonSpacing / 2)
		height 20px
		margin-left -30px
		padding 20px 0px
		$top = 10px
		border-top-left-radius $top
		border-top-right-radius $top
		transition 0.2s
		border-style solid
		border-width 1px
		border-color $darkgrey
		a
			-webkit-transition 0.2s
			transition 0.2s
		
		&:hover
			background $blue
			color white
			height 25px
			cursor pointer
			box-shadow 0px -3px 0px white
			a
				font-size 120%
		
	.main
		margin-left ($std_page_width / 2 + $bottomButtonSpacing / 2 - 30px)
		&:hover
			background $red
			
	.line
		height 1px
		width 384px
		background $darkgrey
		position fixed
		bottom 64px
		left 50%
		margin-left ($std_page_width / -2 + 10)
		text-align center
		
	.mask
		bg-image main-content-inverted-corner-mask 'svg?v=4'
		position fixed
		bottom 0px
		left 50%
		width $std_page_width
		height 76px
		background-size 100%
		margin-left ($std_page_width / -2)	
		
[data-page="login"]
	.main-content
		border-radius 10px
		padding 30px
		background $grey
		height 160px
		border-style solid
		border-width 1px
		border-color $darkgrey
	h1
		font-title()
		text-decoration underline
		color $blue
		text-align center
	.text
		margin-left ($std_page_width / 2 - 112)
		
		
		
 		
 	.log
		position relative
		top 10px
		color white
		background $blue
		height 150px
		width 80px
		height 27px
		border-radius 5px
		transition 0.2s
		text-align center
		font-size 125%
		margin-left ($std_page_width / 2 - 70)
		border-style solid
		border-width 1px
		border-color $darkgrey
		padding 4px
		
		&:hover
			background $darkblue
			cursor pointer
			box-shadow: 0px 0px 10px -2px rgba(153,153,153,1);
			font-size 130%
		
	
	

	
	

