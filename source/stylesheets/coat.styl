		position fixed
		bottom 0px
		background $red
		width ($std_page_width / 2 - $bottomButtonSpacing / 2)
		height 20px
		padding 20px 0px
		$top = 10px
		border-top-left-radius $top
		border-top-right-radius $top
		-webkit-transition 0.2s
		transition 0.2s
		a
			-webkit-transition 0.2s
			transition 0.2s
		
		&:hover
			background $darkred
			height 25px
			cursor pointer
			a
				font-size 120%
		
	.main
		margin-left ($std_page_width / 2 + $bottomButtonSpacing / 2)
		
	

	
	

