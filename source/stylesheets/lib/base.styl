// index.styl
// VRO Web

@import variables

// ----------------------------------------------	

body 
	background-color $grey

.bold
	font-weight bold

h1
	font-title()
	text-decoration underline
	text-align center
	font-size 300%

h2
	font-regular()


.main-content
	box-shadow 0px 6px 37.5px 0px rgba(0,0,0,0.03)
	background-color red
	main-container-width()
	padding-top $mainContentPadding
	padding-bottom $mainContentPadding
	top $header_height
	@media all and (min-width: $std_page_width)
		margin-top 100px
		margin-bottom 100px
		border-radius 10px

	background white
	border-style solid
	border-width 1px
	border-color $darkgrey
	//overflow-x hidden
	overflow-y visible