.header
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.2)
	background white
	position fixed
	top 0px
	height $header_height
	width 100%
	z-index 100
	
	.content
		main-container-width()
		
	.content > a
		width 33%
		display inline-block
		height 100%
		text-align center
		line-height $header_height
		transition box-shadow 0.17s

		color $darkergrey
		
		highlight-tab(color)
			box-shadow inset 0 -3px 0 color
			color $body

		&.faq:hover, &.faq.selected
			highlight-tab $green
		&.main:hover, &.main.selected
			highlight-tab $red
		&.logout:hover, &.logout.selected, &.login:hover, &.login.selected
			highlight-tab $blue
