[data-page="main"].logged-in
	.main-content
		height 500px
		
[data-page="main"].logged-out
	.main-content
		height 300px
		max-width 450px

[data-page="main"]
	h1
		color $red

	// .main-content
	// 	height 545px

	.catch, .die
		text-align center
		width calc((100%-20px) / 2)
		display inline-block
			
	.catch, .die
		position relative
		top 50px
		background white
		width 50%
		height (($std_page_width - $mainContentPadding*2) / 2)
		@media all and (max-width: $std_page_width)
			height "calc(50vw - %s)" % $mainContentPadding
		bg-image happy
		border-radius 50%
		transition 0.2s
		.label
			position absolute
			bottom -20px
			width 100%
			text-align center
		
		&:hover
			bg-image darkhappy
			background-size 105%
			cursor pointer
		
	.die
		bg-image dead
		&:hover
			bg-image darkdead
			background-size 105%
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		
	.statustext
		font-size 150%
		top 35px
		
	.login-btn
		button-style $red
		display block
		width 100px
		top 30px
		margin 0 auto
		
		&:hover
			background $darkred
	
	.waringheadline
		color white
		text-decoration none
				
	.warningtext, .warningtext2
		color white
		font-size 130%
		margin 0px 15px
		top -3px
	
	.warning
		box-sizing border-box
		background-color $red
		position absolute
		top 300px
		left 20%
		width 60%
		padding 7px
		border-radius 10px
		border 3px solid #e4e4e4
		//height 150px
		animation flash linear 1.5s infinite
		//transform scale(0.2,0.2)
		//opacity 0
		transition top 0.4s, opacity 0.2s
		z-index -1
		&.show
			//transform scale(1,1)
			opacity 1
			top 530px
	
	@keyframes flash {
		0% {
		background-color: $red;
		}
		50% {
		background-color: $darkred;
		}
		100% {
		background-color: $red;
		}
	}

	iframe
		position absolute
		width 100%
		left 0px
		border none
		bottom 0px
		height 70%