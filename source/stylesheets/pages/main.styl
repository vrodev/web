[data-page="main"]
	.main-content
		height 500px
	h1
		color $red

	// .main-content
	// 	height 545px

	.catch, .die
		text-align center
		width calc((100%-20px) / 2)
		display inline-block
			
	.catch, .die
		position relative
		top 50px
		background white
		width 50%
		height (($std_page_width - $mainContentPadding*2) / 2)
		@media all and (max-width: $std_page_width)
			height "calc(50vw - %s)" % $mainContentPadding
		bg-image happy
		border-radius 50%
		transition 0.2s
		.label
			position absolute
			bottom -20px
			width 100%
			text-align center
		
		&:hover
			bg-image darkhappy
			background-size 105%
			cursor pointer
		
	.die
		bg-image dead
		&:hover
			bg-image darkdead
			background-size 105%
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		
	.statustext
		font-size 150%
		top 35px
		
	.login-btn
		button-style $red
		display block
		width 100px
		top 130px
		margin 0 auto
		
		&:hover
			background $darkred
			
	.made
		font-size 65%
		position absolute
		bottom 0px
		color $darkergrey
		width 100%
		
		.hover, .default
			position absolute
			top 5px
			transition opacity 0.3s
			//transition font-size 0.3s
		.hover
			opacity 0
			//font-size 0%
		&:hover
			.hover
				opacity 1
				//font-size 100%
			.default
				opacity 0