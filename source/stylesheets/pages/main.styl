[data-page="main"]
	h1
		color $red

	// .main-content
	// 	height 545px

	.catch, .die
		text-align center
		width calc((100%-20px) / 2)
		display inline-block
			
	.catch, .die
		position relative
		top 50px
		width 50%
		height (($std_page_width - $mainContentPadding*2) / 2)
		@media all and (max-width: $std_page_width)
			height "calc(50vw - %s)" % $mainContentPadding
		bg-image happy
		border-radius 50%
		transition 0.2s
		.label
			text-align center
			position relative
			top 40px
			font-size 120%
			padding 0% 13.9%
			display inline-block

		&:hover
			bg-image-url darkhappy
			background-size 105%
			cursor pointer
		
	.die
		bg-image-url dead
		&:hover
			bg-image-url darkdead
			
	p
		text-align center
		position relative
		top 10px
		color black
		font-size 130%
		
	.statustext
		font-size 150%
		top 35px
		
	.main-content
		height 500px