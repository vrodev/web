[data-page="catch"]
	h1 
		text-align center
		
	p
		text-align center
	
	a
		text-align center
		width 100%
		display inline-block
		
	.main-content
		border-radius 10px
		padding 30px
		background white
		height 350px
		border-style solid
		border-width 1px
		border-color $darkgrey
	h1
		font-title()
		text-decoration underline
		color $red
		text-align center
		font-size 250%
		
	.text
		$inputwidth = 200
		margin-left ($std_page_width / 2 - $inputwidth / 2)
		width $inputwidth
		height 40px
		text-align center
		position relative
		top 20px
		
		
		
		
	.log
		display block
		position relative
		top 50px
		color white
		background $red
		border-radius 5px
		transition 0.2s
		text-align center
		font-size 125%
		border-style solid
		border-width 1px
		border-color $darkgrey
		padding 7px 20px
		margin 0 auto
		
		&:hover
			background $darkred
			cursor pointer
	.main
		position relative
		top 40px
		text-decoration underline
		color black
		
		&:hover
			color $darkred
			
	.info
		position relative
		top 10px