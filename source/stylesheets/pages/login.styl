[data-page="login"], [data-page="catch"]
	.main-content
		height 350px
	h1
		color $blue
		
	.error-message
		text-align center
		top 20px
		position relative

	$wi = 200px
	input[type="text"]
		width $wi
		display block
		height 40px
		text-align center
		position relative
		top 50px
		margin 0 auto
		font-size 25px
		&:focus
			outline none
		
	input[type="submit"]
		width $wi
		top 60px
		button-style $blue
		&:disabled
			opacity 0.5
			pointer-events none
		&:hover
			background $darkblue
			cursor pointer
			
	.made
		font-size 65%
		position absolute
		bottom 0px
		color $darkergrey
		width 100%
		
		.hover, .default
			position absolute
			top 5px
			transition opacity 0.3s
			//transition font-size 0.3s
		.hover
			opacity 0
			//font-size 0%
		&:hover
			.hover
				opacity 1
				//font-size 100%
			.default
				opacity 0