[data-page="login"]
	h1
		font-title()
		text-decoration none
		
	.main-content
		border-radius 10px
		padding 30px
		background white
		height 350px
		border-style solid
		border-width 1px
		border-color $darkgrey
	h1
		font-title()
		text-decoration underline
		color $blue
		text-align center
		font-size 250%
		
	.text
		$inputwidth = 200
		width $inputwidth
		display block
		height 40px
		text-align center
		position relative
		top 70px
		margin 0 auto
		
		
		
		
	.log
		$logwidth = 60
		position relative
		display block
		top 80px
		color white
		background $blue
		width $logwidth
		height 35px
		border-radius 5px
		transition 0.2s
		text-align center
		font-size 125%
		border-style solid
		border-width 1px
		border-color $darkgrey
		padding 4px
		margin 0 auto
		
		&:hover
			background $darkblue
			cursor pointer