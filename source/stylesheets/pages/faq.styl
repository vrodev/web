[data-page="faq"]
	.main-content
		h1
			color $green
		h3
			color $green
			margin-top 15px
			margin-bottom 1px

		.end
			margin-top 30px
			color $green
			font-weight bold
			text-align center
			font-size 150%
			
		ul.a
			list-style-type circle
			
	.made
		font-size 65%
		position absolute
		bottom 0px
		color $darkergrey
		width 100%
		
		.hover, .default
			position absolute
			top 5px
			transition opacity 0.3s
			//transition font-size 0.3s
		.hover
			opacity 0
			//font-size 0%
		&:hover
			.hover
				opacity 1
				//font-size 100%
			.default
				opacity 0