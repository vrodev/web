// index.styl
// VRO Web

@import variables

// ----------------------------------------------	

body 
    background-color $grey

.main-content
	max-width 1040px
	top $headerheight
	margin-top 0px
	border-radius 0px
	overflow hidden
	padding 0px
	box-shadow 0px 0px 40px -16px rgba(0,0,0,0.8)
	border none
	padding-bottom 5px

.header
	width 100%
	height $headerheight
	position fixed
	z-index 100
	background #fff
	top 0px
	left 0px
	box-shadow 0px 0px 5px alpha(#000, 20%)
	
.center-header
	top 0px
	width 100%
	max-width 1040px
	height 100%
	margin auto
	
.slide
	width 100%
	height 350px
	position relative
	overflow hidden
	
	@media (max-width:500px){
		height 175px
	}
	
.slideobject
	height 100%
	width 100%
	position absolute
	transition margin-left .5s
	background-size cover
	background-repeat no-repeat
	background-position center center
	
$quote = '"'
for num in 0 1 2
	.slide[data-index={$quote}{num}{$quote}]
		.slideobject
			margin-left (-100% * num)


.bildtext
	$height = 50px
	z-index 20
	text-align center
	color white
	text-decoration none
	font-size 500%
	text-shadow 0px 0px 150px #000
	top 50%
	position absolute
	line-height $height
	height $height
	margin-top (-0.5 * $height)
	width 100%
	
.slidemarker
	position absolute
	top calc(100% - 22px)
	width 50px
	height 25px
	z-index 20
	left 50%	
	
.plupp
	height $pluppdia
	width $pluppdia
	border-radius $pluppdia
	display inline-block
	margin-left 3px
	margin-right 3px
	background-color rgba(255, 255, 255, 0)
	
	border 1px
	border-style solid
	border-color white

.plupp0
	background-color white
	
.arrow
	box-sizing border-box
	width 75px
	height 187.5px
	bg-image arrow
	top calc(50% - 93.75px)
	z-index 20
	position absolute
	padding 25px
	background-origin content-box
	transition all 0.17s
	border-radius 0 100% 100% 0
	
	&:hover
		cursor pointer
		background-color rgba(0, 0, 0, 0.5)
		
.arrowr
	right 0px
	transform: scaleX(-1)
	
.box
	width 33%
	height 0px
	padding-top 22%
	margin 0.25% 0px 0px 0.25%
	display inline-block
	background-size cover
	background-position center
	vertical-align top
	
	@media (max-width:500px){
		width 49.75%
		padding-top (49.75*2/3)%
	}
	
.logga
	bg-image logga
	height 40px
	width 40px
	position relative
	left 0px
	top 5px
	display inline-block
	
.vrotxt
	position relative
	left 0px
	font-family 'BebasNeue', Helvetica, sans-serif
	font-weight 800
	font-size 230%
	display inline-block
	bottom 2px
	
	@media (max-width:500px){
		display none
	}
	
.log
	background-color black
	height 35px
	width 95px
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
	
	float right
	top 7px
	position relative
	text-align center
	display inline-block
	
	@media (max-width:500px){
		width 70px
		height 90%
		top 2.5px
	}
	
	
.logtxt
	font-family 'BebasNeue', Helvetica, sans-serif
	font-weight 800
	font-size 150%
	color white
	vertical-align middle
	line-height 37px 
	
	@media (max-width:500px){
		line-height 45px
	}