//credit

.creddiv
	/*border-style solid
	border-width 1px 0px 0px 0px
	border-color #909090*/
	margin-top 5px
	transition all 0.2s ease-in-out
	width 100%
	text-align center
	
	@media (max-width:500px){
		position fixed
		background-color transparent
		bottom -100px
		z-index 50
	}
	
	.shine
		width 100%
		height 19px
		background: linear-gradient(rgba(0,0,0,.03), rgba(255,0,0,0))
		position absolute
		top calc(100% - 19px)
		left 0px
	
	.credits
		font-size 80%
		text-align center
		font-family Arial
		display inline-block
		padding 2px 0px 2px 0px
		color #5f5f5f
		
		@media (max-width:500px){
			color rgba(255, 255, 255, 0.85)
			background rgba(0, 0, 0, 0.5)
			box-shadow 0px 0px 20px rgba(255, 255, 255, 0.15)
			border-radius 6px
			width auto
			padding 10px
		}
		
