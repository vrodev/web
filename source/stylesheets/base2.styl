@import variables

// ----------------------------------------------	

body 
	background-color white
	min-height "calc(100% - %s)" % $largeheaderheight
	
	@media (max-width:1040px){
		min-height "calc(100% - %s)" % $headerheight
	}
	
.extendHeader
	position absolute
	z-index 0
	height 196px
	width 100%
	top $headerheight
	
	@media (max-width:500px){
		display none
	}
	
.scrollheader
	.center-header
		background white !important
		.menubutton
			background-image url(/images/menu.png) !important
		.logga
			background-image url(/images/logga.png) !important
		.logged-in
			background-color: rgba(0,0,0,0.1)
			
			.title
				color black !important
	.phonelinks
		background-color #eaeaea !important
		
		.link
			color black
				

.main-content
	margin-top $largeheaderheight
	box-sizing border-box
	border-radius 0px
	padding 0px
	background-color white
	//box-shadow 0px 0px 40px -16px rgba(0,0,0,0.8)
	box-shadow none 
	border none
	z-index 1
	padding-bottom 25px
	
	@media (max-width:1040px)
		margin-top $headerheight
		
	@media (min-width:1040px)
		margin-top $largeheaderheight
