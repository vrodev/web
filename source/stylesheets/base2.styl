//credit

.creddiv
	color rgba(255,255,255,0.7)
	width 100%
	text-align center
	position absolute
	bottom 0
	
	.credits
		display inline-block
	
	@media (max-width:750px)
		.extra
			display none
	&:hover
		.extra
			display inline-block

.credits-banner
	position fixed
	background rgba(0, 0, 0, 0.5)
	bottom -100px
	z-index 50
	color rgba(255, 255, 255, 0.85)		
	box-shadow 0px 0px 20px rgba(255, 255, 255, 0.15)
	border-radius 6px
	width 216px
	padding 10px
	font-size 80%
	text-align center
	font-family Arial
	display inline-block
	left 50%
	transform translate(-50%,0)
	transition .2s bottom ease-in-out
	
//kommitte
.kommitteruta
	height calc(28/48*220px)
	
	@media (max-width:520px){
		height 0px
		padding-top 28%
	}	
	
	.kommittetext
		top calc(50% - 20px)
		position absolute
		text-align center
		width 100%
		height 40px
		color white
		line-height 40px
		font-size 130%
		transition all 0.2s ease-in-out
		
		@media (max-width:350px){
			font-size 110%
		}
			
