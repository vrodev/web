@import variables

// ----------------------------------------------	

body 
	background-color white
	
	@media (max-width:500px){
		min-height 100%
	}
	
.extendHeader
	position absolute
	z-index 0
	height 196px
	width 100%
	top $headerheight
	
	@media (max-width:500px){
		display none
	}
	
.darkBackground
	width 100%
	height 100%
	background-color rgba(0,0,0,0.9)
	position fixed
	display none
	z-index 30

.main-content
	max-width 1040px
	top $headerheight
	margin-top 0px
	border-radius 0px
	overflow hidden
	padding 0px
	//box-shadow 0px 0px 40px -16px rgba(0,0,0,0.8)
	box-shadow none 
	border none
	z-index 1
	background none
	
	@media (max-width:500px){
		box-shadow none
		min-height calc(100vh - 50px)
	}
	

