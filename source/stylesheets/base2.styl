	margin-top 5px
	transition bottom 0.2s ease-in-out
	width 100%
	
	@media (max-width:500px){
		position fixed
		background-color transparent
		bottom -50px
		z-index 50
	}
	
	.shine
		width 100%
		height 19px
		background: linear-gradient(rgba(0,0,0,.03), rgba(255,0,0,0))
		position absolute
		top calc(100% - 19px)
		left 0px
	
	.credits
		font-size 80%
		text-align center
		font-family Arial
		padding 2px 0px 2px 0px
		color #5f5f5f
		
		@media (max-width:500px){
			color rgba(255, 255, 255, 0.75)
		}
		
//kommitte
.kommitteruta
	height calc(28/48*220px)
	
	@media (max-width:520px){
		height 0px
		padding-top 28%
	}
	
	&:hover
		.kommittetext
			font-size 132%
			
	
	.kommittetext
		top calc(50% - 20px)
		position absolute
		text-align center
		width 100%
		height 40px
		color white
		line-height 40px
		font-size 130%
		transition all 0.2s ease-in-out
		
		@media (max-width:350px){
			font-size 110%
		}
		
	.kommittehover
		width 100%
		height 100%
		position absolute
		top 0px
		left 0px
		z-index 20
		transition all 0.2s ease-in-out
		
		&:hover
			background-color rgba(255, 255, 255, 0.07)
			
