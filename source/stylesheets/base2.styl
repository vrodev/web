// index.styl
// VRO Web

@import variables

// ----------------------------------------------	

body 
    background-color $grey

.main-content
	max-width 1040px
	top $headerheight
	margin-top 0px
	border-radius 0px
	overflow hidden
	padding 0px
	box-shadow 0px 0px 40px -16px rgba(0,0,0,0.8)
	border none
	padding-bottom 5px

.header
	width 100%
	height $headerheight
	position fixed
	z-index 100
	background #fff
	top 0px
	left 0px
	box-shadow 0px 0px 5px alpha(#000, 20%)
	
.slide
	width 100%
	height 350px
	position relative
	overflow hidden
	
.slideobject
	height 100%
	width 100%
	position absolute
	transition margin-left .5s
	background-size cover
	background-repeat no-repeat
	background-position center center
	
$quote = '"'
for num in 0 1 2
	.slide[data-index={$quote}{num}{$quote}]
		.slideobject
			margin-left (-100% * num)


.bildtext
	$height = 50px
	z-index 20
	text-align center
	color white
	text-decoration none
	font-size 500%
	text-shadow 0px 0px 150px #000
	top 50%
	position absolute
	line-height $height
	height $height
	margin-top (-0.5 * $height)
	width 100%
	
.slidemarker
	position absolute
	top calc(100% - 22px)
	width 50px
	height 25px
	z-index 20
	left 50%	
	
.plupp
	height $pluppdia
	width $pluppdia
	border-radius $pluppdia
	display inline-block
	margin-left 3px
	margin-right 3px
	background-color rgba(255, 255, 255, 0)
	
	border 1px
	border-style solid
	border-color white

.plupp0
	background-color white
	
.arrow
	box-sizing border-box
	width 75px
	height 187.5px
	bg-image arrow
	top calc(50% - 93.75px)
	z-index 20
	position absolute
	padding 25px
	background-origin content-box
	transition all 0.17s
	border-radius 0 100% 100% 0
	
	&:hover
		cursor pointer
		background-color rgba(0, 0, 0, 0.5)
		
.arrowr
	right 0px
	transform: scaleX(-1)
	
.box
	width 340px
	height 250px
	margin 5px 0px 0px 5px
	display inline-block
	background-size cover
	background-position center
	vertical-align top
	
.logga
	bg-image logga
	height 40px
	width 40px
	position absolute
	left calc(50% - 520px)
	top 5px
	
.vrotxt
	position absolute
	left calc(50% - 475px)
	font-family 'BebasNeue', Helvetica, sans-serif
	font-weight 800
	font-size 230%
	top 5px
	
.log
	background-color black
	height 35px
	width 95px
	margin-left calc(50% + 420px)
	margin-top 7.5px
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
	text-align center
	
	
.logtxt
	font-family 'BebasNeue', Helvetica, sans-serif
	font-weight 800
	font-size 150%
	color white
	vertical-align middle
	line-height 37px 