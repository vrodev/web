body > .topheader
	width 100%
	height $headerheight
	position fixed
	z-index 100
	background #fff
	top 0px
	left 0px
	box-shadow 0px 0px 5px rgba(0,0,0,0.2)
	
	transition all 0.2s
	box-shadow none
	
	@media (min-width:500px)
		height $largeheaderheight
	
.darkheader
	box-shadow 0px 0px 5px alpha(#000, 30%) !important
	
.mainheader
	@media (max-width:500px){
		background none
	}
	
.center-header
	position absolute
	top 50%
	left 50%
	transform: translate(-50%, -50%)
	width 98%
	max-width calc(1040px * .98)
	z-index 5
	
	@media (max-width:1040px){
		width 100%
		box-sizing border-box
		padding 0 5px 0 5px
	}
	
	@media (max-width:500px){
		height 100%
	}
	
.headershadow
	position absolute
	width 100%
	height 100%
	background-color rgba(0,0,0,.75)

.header
	background-size cover !important
	background-position center
	position relative
	
.headertext
	text-decoration none
	position relative
	color white
	text-align center
	width 100%
	font-size 500%
	cursor default
	font-weight 400
	
	padding-top 50px
	padding-bottom 50px
	
	@media (max-width:500px){
		padding-top 10px
		padding-bottom 10px
		line-height 100%
		font-size 17vw
	}

.headerbackground
	width 100%
	height 100%
	position absolute
	background-size cover
	background-position center
	
.shineheader
	width 100%
	height 100%
	background: linear-gradient(rgba(white,0.2), rgba(0,0,0,0))
	position absolute
	top 0px
	left 0px

	
.logga
	bg-image logga
	height 40px
	width 40px
	position relative
	left 0px
	top 5px
	display inline-block
	z-index 20
	@media (max-width:800px){
		top 2px
	}
	
	@media (max-width:500px){
		left calc(50% - 20px - 50px)
		top -5px
	}

.vrotxt
	position relative
	left 0px
	font-family 'BebasNeue', Helvetica, sans-serif
	font-weight 800
	font-size 230%
	display inline-block
	color black
	bottom 2px
	z-index 20
	
	@media (max-width:800px){
		display none
	}
	
.log
	background-color black
	height 35px
	width 95px
	z-index 20
	
	float right
	top 7px
	position relative
	text-align center
	display inline-block
	transition all .2s
	border-radius $default-radius
	cursor pointer
		
	@media (max-width:1040px){
		right 5px
	}
	
	@media (max-width:800px){
		top 2px
	}
	
	@media (max-width:500px){
		width 80px
		height 70%
		position absolute
		right 7px
		top 50%
		transform translateY(-50%)
		
		text-align left
	}
	
.logged-in
	absolute top 5px right 0
	border-radius 3px
	cursor pointer
	
	height 40px
	padding-left 8px

	& > .title
		font-weight bold
		line-height 40px
		text-align right
		overflow-x hidden
		display inline-block
		margin-right 5px
		background none !important
		
		@media (max-width:500px){
			font-size 130%
		}
		@media (min-width:500px){
			color black !important
		}
		
	.logout
		display none

	& > .image
		display inline-block
		background-size cover
		background-repeat no-repeat
		background-position center
		size 30px
		margin 5px
		border-radius 50%
	
	@media (max-width:1040px){
		right 5px
	}
	
	@media (max-width:500px){
		background-color rgba(0,0,0,.075)
	}
	
	&:hover
		padding 0
		.logout
			display block
			margin-right 8px
			margin-left 8px
		.name
			display none
			
		.image
			display none
	
.logtxt
	font-title()
	font-size 150%
	color white
	vertical-align middle
	text-align center
	cursor default
	
	position absolute
	top 50%
	width 100%
	transform translateY(-50%)
	
.trans-login
	background-color rgba(white,.1)
	color white

.trans-login-black
	background-color rgba(black,.1)
	.title
		color black
	.logtxt
		color black
	
.menubutton
	@media (max-width:500px){
		bg-image menu
		height 20px
		width 20px
		margin 15px
		display inline-block
		transition all 0.2s  ease-in-out
	}
			
.link
	font-title()
	font-size 170%
	margin-left 10px
	line-height $headerheight
	display inline-block !important
	vertical-align top
	padding 0px 10px 0px 10px
	transition: all 0.1s ease-out
	cursor pointer
	color black
	
	&:first-child
		margin-left 0px
		
	&:hover
		background-color black
		color white
	
	@media windwow and (max-width:800px) and (min-width:500px)
		color black !important


.subtle-link
	&:hover
		background-color transparent
		color black
	
.links
	margin 0 auto
	position absolute
	top 0px
	left 50%
	margin-left -50%
	width 100%
	
	text-align center
	
	@media (max-width:500px){
		display none
	}
	
div.link
	overflow hidden
	max-height ($headerheight - 1px)
	padding 0px
	cursor pointer
	user-select none
	position relative
	
	&:hover
		color rgba(white, .5)
		background-color black
		max-height 200px
		box-shadow 0 0 5px alpha(#000, 30%)	
	
		.linkArrow
			display none		
		
	.linkArrow
		position absolute
		bottom 2px
		width 100%
		text-align center
		font-size .6em
		height 1em
		line-height 1.4em
		
	.sublink
		display block
		padding 0px 10px 0px 10px
		color white
		transition: all 0.2s ease-out
		text-align center
		
		&:hover
			background-color darken(white, 80)
			box-shadow 5px alpha(#000, 30%)
		
		@media (max-width:500px)
				padding 0
			
.whiteheader
	.logga
		bg-image logga-vit
	.menubutton
		bg-image menu-vit
	.vrotxt
		color white
	.link
		color white
	.log
		background-color rgba(white, .2)
		.logtxt
			color white
			
	.logged-in
		background-color rgba(white,.2)
		.title
			color rgba(white,.9) !important
		