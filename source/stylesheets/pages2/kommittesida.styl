.kommittefalt
	margin 0px
	text-align center
	
.kommittelink
	margin-bottom 20px
	margin-top 20px
	position relative
	width auto
	
	&:hover
		cursor pointer
	
	.shine
		background linear-gradient(rgba(255,255,255,0.1),rgba(255,255,255,0))
		
		&:hover
			cursor pointer
			
		@media (max-width:500px){
			display none
		}

	.kommittelinktext
		width auto
		text-align left
		display inline-block
		padding 10px
		border-radius 5px
		color white
		
		&:hover
			cursor pointer
		
.utskottrubrik.ordfarande
	color black
	margin-top 30px
	margin-bottom 40px
	font-size 100%
	font-weight normal
	
	@media (max-width:500px){
		margin 10px
	}