.stat-title
	padding 50px 0
	font-weight bold
	font-size 50px
	text-align center
	
	@media (max-width:500px)
		padding 30px 0
		font-size 40px
	
	.subtitle
		font-size 16px
		font-weight normal
		opacity .7
	
.stat-container
	max-width 600px
	margin auto
	position relative
	
	.class-div
		width 86%
		padding 2%
		margin 20px 5% 
		border-radius 5px
		background #28825F
		box-shadow 0 0 5px rgba(black,.1)
	
		.info
			display inline-block
			font-size 20px
			margin-right 10px
			color white
			font-weight bold
			
			&.points
				float right
.rules-container
	padding: 15px
	margin: auto
	margin-top: 50px
	max-width: 600px
	border-top: solid 1px #80808087
	
	.title
		font-weight bold
		font-size 25px
		text-align center
		margin 30px 0 