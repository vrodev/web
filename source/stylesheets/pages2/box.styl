	vertical-align top
	.plus
		display none
	label.add-image
		display block
		max-width 499px !important
		background-color rgba(0,0,0,.05)
		position relative
		cursor pointer
		
		.imagetext
			position absolute
			top calc(50% + 40px)
			left 50%
			transform translateX(-50%)
			color grey

