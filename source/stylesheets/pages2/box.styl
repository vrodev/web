.card-container
	max-width 1040px

.box
	width 24%
	margin calc(4%/8)
	background-color white
	border-radius 0px
	transition all 0.2s

	@media (max-width:500px){
		margin 1%
		width 48%
	}
	
	&:hover
		box-shadow 0px 0px 5px rgba(0, 0, 0, 0.3)			
	
	.boxtop
		width 100% !important
		padding 0px !important
		margin 0%
	
		.image
			width 100% !important
			padding-top 100% !important
			margin 0% !important
			background-size cover 
		
	.boxtext
		font-family CenturyGothic !important
		color #292929 !important
		font-weight bold !important
		font-size 120%
		height 50px
		overflow hidden
		margin 8px
		
		@media (max-width:500px){
			font-size 4vw
			height 10vw
		}
		
		&:hover
			text-decoration underline

.box.menu
	padding-top calc(24% + 66px)
	bg-image foodbox
	background-position center
	background-size cover
	display inline-block
	position relative
	vertical-align top
	
	@media (max-width:500px){
		padding-top calc(48% + 14vw)
	}
		
	.container
		square 100%
		absolute top 0px left 0px
		font-default()
		
		.mat
			text-align center
			line-height 110%
			font-family Sans-serif
			margin 7%
			font-size 110%
	

			@media (max-width:500px){
				margin 5px
			}
			
			@media (max-width:880px){
				font-size 100%
			}
			
			@media (max-width:400px){
				font-size 4vw
			}
	
			.reg
				top 0px
				color #181313
				
			.veg
				position absolute
				bottom 0px
				color white
	