				.subtitle
					height auto !important
		.options
			//absolute bottom 0px right 0px
			margin-top 20px
			width 100%
			div.checkboxdiv
				padding-left 22px
				.checkbox
					display inline-block
					height 30px
					width 30px
					relative top 10px left -10px
					
				label.label2
					display inline-block
					flex-grow 1
					line-height 50px
