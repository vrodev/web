.mainPage
	.topheader
		box-shadow none
	
	@media (max-width:500px)
		background-color #f1f1f1
	
	@media (min-width:1040px)
		.main-content
			top 80px
		.topheader
			height 80px
	
.noUser
	.main-content
		.showoff
			position relative
			width 100%
			.background
				position absolute
				width 100%
				height 100%
				top 0
				bg-image matsalen "jpg"
				background-size cover
				background-position center
				z-index 1
			.gradient
				position absolute
				width 100%
				height 100%
				top 0
				background linear-gradient(rgba($vrocolor,.8), rgba( $vrocolor ,.6))
				z-index 5
			.content
				padding-top 80px
				padding-bottom 30px
				box-sizing border-box
				z-index 5
				position relative
				.name
					font-family BebasNeue
					font-size 400%
					color white
				
				.logo
					bg-image logga
					height 150px
					filter: invert(100%)
					
			@media (max-width:500px)
				.gradient
					background linear-gradient(rgba($vrocolor), rgba( $vrocolor ,.6))
					
				.content
					padding-top 15px
					padding-bottom 20px
					.name
						font-size 200%
					.logo
						display none
			
		.card-container
			display inline-block
			width 100%
				
		max-width 100%
		text-align center
		
		@media (min-width:500px)
			top 0
		
	@media (min-width:500px)
		.topheader
			background-color transparent
			
			.center-header
				background-color transparent !important
		