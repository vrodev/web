.mainPage
	.topheader
		box-shadow none
	
	@media (max-width:500px)
		background-color #f1f1f1
	
	@media (min-width:1040px)
		.topheader
			height 80px
			
	.main-content
		.header
			.headertext
				@media (max-width:1040px)
					padding-top 3vw
					padding-bottom 3vw	
				.long
					display block
				.short
					display none
					
				@media (max-width:1040px)
					.long
						font-size 9vw

				@media (max-width:500px)
					.long
						display none
					.short
						display block
			
				.logo
					bg-image logga-vit
					height 150px
					
					@media (max-width:1040px)
						height 15vw
					
			@media (max-width:500px)
				.headertext
					.logo
						display none
		
			
.app-reminder
	position fixed
	top 10px
	right 0
	padding 15px
	color black
	background white
	z-index 110
	margin 10px
	border-radius 4px
	box-shadow 0 0 4px rgba(0,0,0,.5)
	max-width 350px
	
	opacity 0
	transition all .5s

	&:after
		top -11px
		right 1px
		border-width 0 12px 12px
		border-color white transparent
		content ""
		position absolute
		border-style solid
	
	.close
		position absolute
		bottom -2px
		right 7px
		color rgba(black,.4)
		font-size 220%
		transform rotate(45deg)
		display block
	