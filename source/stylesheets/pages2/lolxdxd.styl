.mainPage
	.topheader
		box-shadow none
	
	@media (max-width:500px)
		background-color #f1f1f1
	
	@media (min-width:1040px)
		.main-content
			top 80px
		.topheader
			height 80px
			
.app-reminder			
	position fixed
	top 10px
	right 0
	padding 15px
	color black
	background white
	z-index 110
	margin 10px
	border-radius 4px
	box-shadow 0 0 4px rgba(0,0,0,.5)
	max-width 350px
	
	opacity 0
	transition all .5s

	&:after
		top -11px
		right 1px
		border-width 0 12px 12px
		border-color white transparent
		content ""
		position absolute
		border-style solid
	
	.close
		position absolute
		bottom -2px
		right 7px
		color rgba(black,.4)
		font-size 220%
		transform rotate(45deg)
		display block
	
.noUser
	.main-content
		.showoff
			position relative
			width 100%
			.background
				position absolute
				width 100%
				height 100%
				top 0
				bg-image matsalen "jpg"
				background-size cover
				background-position center
				z-index 1
			.gradient
				position absolute
				width 100%
				height 100%
				top 0
				background linear-gradient(rgba($vrocolor,.9), rgba( $vrocolor ,.8))
				z-index 5
			.content
				padding-top 80px
				padding-bottom 30px
				box-sizing border-box
				z-index 5
				position relative
				.name
					font-family BebasNeue
					font-size 400%
					color white
				
				.logo
					bg-image logga-vit
					height 150px
					
			@media (max-width:500px)
				.gradient
					background linear-gradient(rgba($vrocolor), rgba( $vrocolor))
					
				.content
					padding-top 10px
					padding-bottom 10px
					.name
						font-size 17vw
					.logo
						display none
			
		.card-container
			display inline-block
			width calc(100% - 1%)
				
		max-width 100%
		text-align center
		
		@media (min-width:500px)
			top 0
		
	@media (min-width:500px)
		.topheader
			background-color transparent
			
			.center-header
				background-color transparent !important
		