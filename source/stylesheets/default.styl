@import variables

// ----------------------------------------------
*
  margin 0
  padding 0
  
ul
  list-style none
  
a
  text-decoration none
  color $link

// ------------------------------------------------------------------------------------------
// ------------------------------------------------------------------------------------------


html
  width 100%
  height 100%

body
  width 100%
  font-default()
  background-color $main-bg
  color $body
  overflow-x hidden
  min-height 100%
  position relative


// ----------------------------------------------

.main-content
  background-color red
  main-container-width()
  padding 20px
  box-sizing border-box
  @media all and (min-width: $std_page_width)
    top 100px
   