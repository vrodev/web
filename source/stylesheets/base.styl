// index.styl
// VRO Web

@import variables

// ----------------------------------------------	

body 
    background-color $grey

.main-content
	// -
		
[data-page="main"]
	.main-content
		
	h1
		text-align center
		color $red
		font-size 175%
		
	.catch
		text-align center
		width calc((100%-20px) / 2)
		display inline-block
		
	.die	
		text-align center
		width calc((100%-20px) / 2)
		display inline-block
	
	.ca, .di
		display inline-block
		
	.fragor, .home, .bye
		display inline-block


[data-page="faq"]
	.main-content
		background white

	h1
		text-align center
		color $green
		font-size 300%
		
	a
		text-align center
		width 100%
		display inline-block 
		

	.bold
		font-weight bold
		
	.end
		color $green
		font-weight bold
		text-align center
		font-size 150%
		
	ul.a
		list-style-type circle
		
	.fragor2, .home2, .bye2
		display inline-block
		
		
[data-page="login"]
	h1
		font-title()
		text-decoration none

[data-page="catch"]
	h1 
		text-align center
		
	p
		text-align center
	
	a
		text-align center
		width 100%
		display inline-block

[data-page="catch-success"]	
	p
		text-align center
	.main
		display inline-block 
		
[data-page="die"]	
	.info
		text-align center
		
	.code
		text-align center
		

