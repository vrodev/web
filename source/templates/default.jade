		link(rel='stylesheet', href='/css/default.css')
		link(rel='stylesheet', href='/css/coat.css')

		//- Helpers
		script(src="/js/helpers/jquery-3.1.0.min.js")
		script(src="/js/helpers/api.js")

		//- 
		script(src="/js/api.js")
		script(src="/js/general.js")
		script(src="/js/catcher.js")

	- dataPage = dataPage || 'none'
	body(data-page='#{dataPage}').loading

