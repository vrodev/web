extend ../default2
block mainContent

	.header.utskottheader
		.headerbackground
		.shineheader.extrashine
		h1.headertext
			.logo
			.name.long viktor rydberg odenplans <br> elevkår
			.name.short VRO Elevkår

	.sort-options
		.option(v-for='tab in tabs', :key='tab',:class='{selected:selectedTab == tab}', @click='selectedTab = tab') {{tab}}


	.card-container

		.card.menu(v-show='selectedTab == "Prioriterade poster"')
			a(href="/mat")
				.datecontainer
					.date
						.currentdate Dagens mat
					.line
				.container
					.content
						p.mat.reg
						.vegcontainer
							.vegstamp
								.text 
									.character v
									.character e
									.character g
							p.mat.veg

		post-card(v-if='filteredPosts.length', v-for='post in filteredPosts', :key='post.id', :post='post')

	script(src='/js/lolxdxd.js')
